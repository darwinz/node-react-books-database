{
  "name": "node-react-books-database-server",
  "version": "1.0.0",
  "description": "Books database server",
  "main": "./src/index.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "cache:clean": "rm ./cache.db",
    "cache:invalidate": "node ./src/invalidate-cache.js",
    "lint": "eslint ./src",
    "prettier": "prettier \"src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "prettier:write": "npm run prettier -- --write",
    "sequelize": "sequelize",
    "dev": "nodemon --legacy-watch ./src/index.js",
    "start": "node ./src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "validate": "npm run lint && npm run prettier -- --list-different"
  },
  "author": "Brandon Johnson",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.8.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "sequelize": "^6.37.5",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^29.2.0",
    "nodemon": "^3.1.14",
    "supertest": "^4.0.2"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "rules": {
      "camelcase": "error",
      "no-console": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "printWidth": 100,
    "proseWrap": "preserve",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
